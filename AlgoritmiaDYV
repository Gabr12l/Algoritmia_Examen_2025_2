int BuscarElemento(int arr[N2],int inicio,int fin){
    
    if(inicio > fin){
        return -1;
    }
    if(inicio == fin){
        return arr[inicio];
    }
    int medio = (fin+inicio)/2;
    if(medio%2 ==1){
        if(arr[medio-1] == arr[medio]){
            return BuscarElemento(arr,medio+1,fin);
        }else{
            return BuscarElemento(arr,inicio,medio-1);
        }
    }else{
        if(arr[medio+1] == arr[medio]){
            return BuscarElemento(arr,medio+2,fin);
        }else{
            return BuscarElemento(arr,inicio,medio);
        }
    }
}

