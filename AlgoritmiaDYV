int main(int argc, char** argv) {
    int arr[N]={0,-1,0,-1,0,1,1,2,2,3,2,2,1,1};
    int n=14;
    int distancia = cuentaDistancia(arr,0,n-1,0);
    cout<<"la radiacion empieza a "<<distancia<<" km."<<endl;
    int mayor = buscaMayor(arr,distancia,n-1);
    cout<<"Potencia maxima "<<mayor<<" megatones";

    return 0;
}

int evaluarMaximo(int maxIzq,int maxDer,int maxTotal){
    if(maxIzq>maxDer &&maxIzq>=maxTotal){
        return maxIzq;
    }
    else{
        if(maxDer>maxIzq &&maxDer>=maxTotal){
            return maxDer;
        }
        else{
            return maxTotal;
        }
    }    
}
int buscarMayorCentro(int arreglo[N],int inicio,int medio,int fin){
    /*Evaluamos para la izq*/
    bool esPrimero = true;
    int suma =0,maxIzq,maxDer,maxTotal;
    for(int i=medio;i>inicio;i--){
        suma = suma + arreglo[i];
        if(esPrimero||suma>maxIzq){
            maxIzq= suma;
        }
        esPrimero=false;
    }
    /*Evaluamos primero para la derecha*/
    esPrimero=true;
    suma =0;
    for(int i=medio+1;i<fin;i++){
        suma = suma + arreglo[i];
        if(esPrimero||suma>maxDer){
            maxDer= suma;
        }
        esPrimero=false;
    }
    maxTotal = maxIzq+maxDer;
    return evaluarMaximo(maxIzq,maxDer,maxTotal);
}
int buscarMayorsuma(int arreglo[N],int inicio,int fin){
    if(inicio==fin){
        return arreglo[inicio];
    }
    int medio = (inicio+fin)/2;
    int maxIzq = buscarMayorsuma(arreglo,inicio,medio);
    int maxDer = buscarMayorsuma(arreglo,medio+1,fin);
    int maxCentro =  buscarMayorCentro(arreglo,inicio,medio,fin);
    evaluarMaximo(maxIzq,maxDer,maxCentro);
//    if(maxIzq>maxDer &&maxIzq>=maxCentro){
//        return maxIzq;
