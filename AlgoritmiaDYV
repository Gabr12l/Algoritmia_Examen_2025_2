//    else{
//        if(maxDer>maxIzq &&maxDer>=maxCentro){
//            return maxDer;
//        }
//        else{
//            return maxCentro;
//        }
//    }
}

int main(int argc, char** argv) {
    
    int arreglo[N] = {-2,-5,6,-2,-3,1,5,-6};
    int n=8;
    cout<<"La mayor sumas es"<<buscarMayorsuma(arreglo,0,n-1);
    
    
    
    return 0;
}




















