    int arreglo[N] = {10,7,12,8,15,3,6};
    int n=7;
    mergeSort(arreglo,0,n-1);
    imprime(arreglo,n);
    return 0;
}

nt buscaMayor(int arr[N],int inicio,int fin){
    if(inicio==fin){
        return arr[inicio];
    }
    int medio = (inicio+fin)/2;
    if(arr[medio]>arr[medio+1]){
        return buscaMayor(arr,inicio,medio);
    }
    else{
        return buscaMayor(arr,medio+1,fin);
    }
    
}
int cuentaDistancia(int arr[N],int inicio,int fin,int cuenta){
    if(inicio>fin){
        return cuenta;
    }
    if(inicio==fin && arr[inicio]<=0){
        return 1+cuenta;
    }
    int medio = (inicio+fin)/2;
    if(arr[medio]>0){
        return cuentaDistancia(arr,inicio,medio-1,cuenta);
    }
    else{
        return cuentaDistancia(arr,medio+1,fin,medio-inicio+cuenta+1);
    }
}

